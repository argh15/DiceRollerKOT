<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextViewMain">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/hello_world</item>
        <item name="android:textSize">@dimen/text_label_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ImageViewMain">
        <item name="android:layout_width">@dimen/img_width</item>
        <item name="android:layout_height">@dimen/img_height</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="ButtonMain">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

</resources>
